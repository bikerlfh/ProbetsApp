container_commands:
    01_createdirs:
        command: "mkdir -p /tmp/probetspp/info_pages/flash && mkdir -p /tmp/probetspp/datasets && chmod 777 -R /tmp/probetspp"
    02_initqcluster:
        command: "source /var/app/venv/*/bin/activate && cd /var/app/staging && python probetspp/manage.py qcluster --settings=probetspp.settings.production"
